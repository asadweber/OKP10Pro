
@{
    ViewBag.Title = KAF.MsgContainer._hr_bankloaninfo.hr_bankloaninfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrBankLoanInfo/HrBankLoanInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrBankLoanInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrBankLoanInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_bankloaninfo.description</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrBankLoanInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrBankLoanInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrBankLoanInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrBankLoanInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrBankLoanInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrBankLoanInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrBankLoanInfo/LandingHrBankLoanInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrBankLoanInfo/NewHrBankLoanInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrBankLoanInfo/EditHrBankLoanInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrBankLoanInfo/DetailHrBankLoanInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



