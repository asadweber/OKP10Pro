@model KAF.BusinessDataObjects.hr_deathinfoEntity

<style>
    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 10px;
    }
</style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmHr_DeathInfoNew", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()

    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            @KAF.MsgContainer._hr_deathinfo.deathinfoCreate
        </div>

        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.deathinfoid)
                    </div>

                    <div class="row ">

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.deathdate, htmlAttributes: new { @class = "labelNormal  required " })
                                <div class='input-group date dateonly' id='' style="width: 100 %; ">
                                    @Html.EditorFor(model => model.deathdate, new { htmlAttributes = new { @Value = Model.deathdate != null ? Convert.ToDateTime(Model.deathdate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.deathdate, "", new { @class = "text-danger " })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.deathreason, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.deathreason, new { htmlAttributes = new { @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.deathreason, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="btn-toolbar">
                        <button type="submit" id="btnSaveHrDeathInfo" class="btn btn-primary btn-md btnSaveHrDeathInfo"><i class="fa fa-save"> </i> @KAF.MsgContainer._Common._btnSave</button>
                        <button type="submit" id="btnModalCloseNew" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script>
    //filecontrol addons





    $j('.dateonly').datetimepicker(
        {
            // format: 'L'
            format: 'DD-MM-YYYY'
        });
</script>




