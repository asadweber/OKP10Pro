
@{
    ViewBag.Title = KAF.MsgContainer._hr_arrivalinfo.arrivalinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrArrivalInfo/HrArrivalInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrArrivalInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrArrivalInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_arrivalinfo.arrivalletterno</th>
                            <th>@KAF.MsgContainer._hr_arrivalinfo.arrivaldate</th>
                            <th>@KAF.MsgContainer._hr_arrivalinfo.arrivalletterdate</th>
                            <th>Total Person</th>
                            <th>Status</th>

                            <th style="width:320px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrArrivalInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrArrivalInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrArrivalInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrArrivalInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrArrivalInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrArrivalInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrArrivalInfo/LandingHrArrivalInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrArrivalInfo/NewHrArrivalInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrArrivalInfo/EditHrArrivalInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrArrivalInfo/DetailHrArrivalInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



