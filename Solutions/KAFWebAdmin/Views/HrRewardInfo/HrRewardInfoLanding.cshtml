
@{
    ViewBag.Title = KAF.MsgContainer._hr_rewardinfo.hr_rewardinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrRewardInfo/HrRewardInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrRewardInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrRewardInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_rewardinfo.rewardevent</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrRewardInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrRewardInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrRewardInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrRewardInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrRewardInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrRewardInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrRewardInfo/LandingHrRewardInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrRewardInfo/NewHrRewardInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrRewardInfo/EditHrRewardInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrRewardInfo/DetailHrRewardInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



