@section Scripts {
    <script>
        function GetDateFromTextBox(strdate) {
            if (strdate != "" && typeof strdate !== 'undefined') {
                if (strdate.indexOf('T') != -1)
                    strdate = strdate.substring(0, strdate.indexOf('T') - 1).trim();

                var dtspl1 = strdate.split("-");
                var retdate = new Date(dtspl1[2], dtspl1[1] - 1, dtspl1[0]);
                retdate = retdate.toISOString();
                //var retdate = $(strdate).val();
                return retdate;
            }
        }
        $(document).ready(function () {

            $j('.dateonly').datetimepicker(
                {
                    // format: 'L'
                    format: 'DD-MM-YYYY'
                });

            $(".select2-selection__placeholder").text('ALL OKP');

            $('#btnSearch').click(function () {

                var searchText = "";
               
                if ($("#okpid").val().length > 0)
                    searchText = "&okpid=" + $("#okpid").val();

                if ($("#soddatefrom").val().length > 0)
                    searchText = "&soddatefrom=" + $("#soddatefrom").val();

                if ($("#soddateto").val().length > 0)
                    searchText = "&soddateto=" + $("#soddateto").val();

                if ($("#flightdatefrom").val().length > 0)
                    searchText = "&flightdatefrom=" + $("#flightdatefrom").val();

                if ($("#flightdateto").val().length > 0)
                    searchText = "&flightdateto=" + $("#flightdateto").val();

                if ($("#lastsalaryreceivefrom").val().length > 0)
                    searchText = "&lastsalaryreceivefrom=" + $("#lastsalaryreceivefrom").val();

                if ($("#lastsalaryreceiveto").val().length > 0)
                    searchText = "&lastsalaryreceiveto=" + $("#lastsalaryreceiveto").val();

                if ($("#rewardavailfrom").val().length > 0)
                    searchText = "&rewardavailfrom=" + $("#rewardavailfrom").val();

                if ($("#rewardavailto").val().length > 0)
                    searchText = "&rewardavailto=" + $("#rewardavailto").val();

                $("#divReport").removeClass("hidden");

                var src = '../Reports/ParadeStateReport.aspx?reporttype=5';
                //We can add parameters here
                src = src + searchText

                var iframe = '<iframe id="myReportFrame" width="100%" height="800px" scrolling="no" frameborder="0" src="' + src + '" allowfullscreen></iframe>';
                $("#divReport").html(iframe);


            });

        });
        function loadselectedpassportletterno() { }
    </script>

}





