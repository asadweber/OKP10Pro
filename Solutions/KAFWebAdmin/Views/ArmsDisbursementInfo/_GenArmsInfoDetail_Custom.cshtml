@model KAF.BusinessDataObjects.gen_armsinfoEntity

<style>
    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 10px;
    }
</style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmGen_ArmsInfoDetail", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()

    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            @KAF.MsgContainer._gen_armsinfo.armsinfoDetails
        </div>

        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.armsid)

                    </div>
                    <div class="row ">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.armsname, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.armsname, new { htmlAttributes = new { @class = " form-control", @readonly = "readonly" } })

                            </div>
                        </div>
                    </div>


                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.armscode, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.armscode, new { htmlAttributes = new { @class = " form-control", @readonly = "readonly" } })

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ism16, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.ism16, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
