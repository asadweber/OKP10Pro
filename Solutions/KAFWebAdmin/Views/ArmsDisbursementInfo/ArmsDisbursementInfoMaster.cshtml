@model KAF.BusinessDataObjects.arms_disbursementinfoEntity
<style>
    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 10px;
    }
</style>
@{
    ViewBag.Title = KAF.MsgContainer._arms_disbursementinfo.disbursementinfoCreate;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}
@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmArms_DisbursementInfoCustom", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()
    <div class="row ">
        <div class="col-lg-12">
            <div class="panel panel-primary list-panel" id="list-panel">

                <div class="panel-body">
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.Label("الرقم العسكري", htmlAttributes: new { @class = "labelNormal " })
                            @Html.TextBox("txtStudentID", "", new { @class = " form-control" })
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            @Html.Label("رقم السلأح", htmlAttributes: new { @class = "labelNormal " })
                            @Html.TextBox("txtArmsCode", "", new { @class = " form-control" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            @Html.Label("ملاحظات", htmlAttributes: new { @class = "labelNormal " })
                            @Html.EditorFor(model => model.issuenote, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="col-lg-2" style="margin-top: 23px;width:100px;">
                        <button type="button" disabled="disabled" id="btnAssignArms" class="btn btn-primary btn-md btnAssignArms "><i class="fa fa-edit"> </i> Issue</button>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="row ">

    <div class="col-lg-9">
        <div id="mcRegBasicInfoDetail">

        </div>
    </div>
    <div class="col-lg-3">
        <div id="mcGenArmsInfoDetail">

        </div>
    </div>
</div>

<div class="row dvarmshistory hidden">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">

            <div class="panel-body">
                <table id="ArmsDisbursementInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>

                            <th>@KAF.MsgContainer._reg_basicinfo.studentid</th>
                            <th>@KAF.MsgContainer._reg_basicinfo.fullname</th>
                            <th>@KAF.MsgContainer._gen_armsinfo.armsname</th>
                            <th>@KAF.MsgContainer._gen_armsinfo.armscode</th>
                            <th>@KAF.MsgContainer._gen_armsinfo.ism16</th>
                            <th>@KAF.MsgContainer._arms_disbursementinfo.issuedby</th>
                            <th>@KAF.MsgContainer._arms_disbursementinfo.issuedate</th>
                            <th>@KAF.MsgContainer._arms_disbursementinfo.returndate</th>
                           

                            @*<th style="width:250px;"></th>*@
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-ArmsDisbursementInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcArmsDisbursementInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-ArmsDisbursementInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcArmsDisbursementInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-ArmsDisbursementInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcArmsDisbursementInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/ArmsDisbursementInfo/LandingArmsDisbursementInfo.js"></script>

    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



