@model KAF.BusinessDataObjects.hr_newdemandEntity

<style>
        .form-horizontal .form-group {
            margin-right: 10px;
            margin-left: 10px;
        }
    </style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmHr_NewDemandEdit", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()
    
    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            New Demand Information: @KAF.MsgContainer._hr_newdemand.newdemandUpdate
            <div class="col-lg-3" style="float:right;text-align:right;">
                <button type="button" id="btnModalCloseEdit" class="close btnModalCloseEdit" aria-label="Close"
                        style="opacity:1.0;opacity: 1.0; margin-top: -11px; color: white;  margin-right: -20px;  font-size: 39px;">
                    <span aria-hidden="true" class=" btnModalCloseEdit">&times;</span>
                </button>
            </div>
        </div>
        
        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.newdemandid)
                        @Html.HiddenFor(m => m.strModelPrimaryKey)
                        @Html.HiddenFor(m => m.ex_bigint1)
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.demandletterno, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.demandletterno, new { htmlAttributes = new {  @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.demandletterno, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.demandletterdate, htmlAttributes: new { @class = "labelNormal  required " })
                                <div class='input-group date dateonly' id='' style="width: 100 %; ">
                                    @Html.EditorFor(model => model.demandletterdate, new { htmlAttributes = new { @Value = Model.demandletterdate != null ? Convert.ToDateTime(Model.demandletterdate).ToString("dd-MM-yyyy") : null,  @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.demandletterdate, "", new { @class = "text-danger " })
                            </div>
                        </div>
                    </div>

                    <div class="row ">
                        <div class="col-md-12">
                            <table id="NewDemandDtNew" class="table table-striped table-bordered dataTable no-footer dtr-inline" style="width:100%;" role="grid" aria-describedby="NewDemandDtEdit_info">
                                <thead>
                                    <tr role="row">
                                        @*<th rowspan="1" colspan="1" style="width:100px">Mil No</th>*@
                                        <th rowspan="1" colspan="1">Rank</th>
                                        <th rowspan="1" colspan="1">Appt</th>
                                        <th rowspan="1" colspan="1">Group</th>
                                        <th rowspan="1" colspan="1">OKP</th>
                                        <th rowspan="1" colspan="1">No of Vacancies</th>
                                        <th>Status</th>
                                        <th rowspan="1" colspan="1" style="width:270px"></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-primary btn-md btnadd" onclick="HrNewDemandNewRow(this)"><i class="fa fa-plus"></i> Add</button>

                    </div>
                    <br/>
                    <div class="btn-toolbar">
                        <button type="submit" id="btnUpdateHrNewDemand" class="btn btn-primary btn-md btnUpdateHrNewDemand"><i class="fa fa-edit"> </i> @KAF.MsgContainer._Common._btnUpdate</button>
                        <button type="submit" id="btnModalCloseEdit" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script>
    //filecontrol addons
    if (parseInt($("#ex_bigint1").val()) > 1) {
        $("#demandletterno").attr("disabled", "disabled");
        $("#demandletterdate").attr("disabled", "disabled");
        $(".btnnerow").css("display", "none");
    }

    $(document).ready(function () {
        $(".btnnerow").css("display", "none");
    });


</script>






