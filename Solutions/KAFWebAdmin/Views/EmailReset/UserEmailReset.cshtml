@model KAF.BusinessDataObjects.owin_userEntity
@{
    ViewBag.Title = KAF.MsgContainer._Login.useremailresetpagetitle;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
}

<style type="text/css">
    input.user-search {
        display: inline-block;
        border: 0px solid;
        width: 85%;
    }
</style>


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="slxx">
            <div class="panel-heading list-panel-heading">
                @KAF.MsgContainer._Login.useremailresetheader
            </div>
            <div class="panel-body">
                <div class="container MainPageCnt" role="main">
                    <div class='ms-bodyareacell clearfix'>
                        <div class="container-fluid">
                            @using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "" }, new { @id = "userEmailResetForm", @class = "form-horizontal" }))
                            {
                                HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
                                HtmlHelper.ClientValidationEnabled = true;
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <label class="required" for="exampleFormControlInput1">@KAF.MsgContainer._Login.username</label>
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @id = "txtUsername", @class = "form-control", @placeholder = "Please enter user name", @data_error = "provide user name" } })
                                        @Html.ValidationMessageFor(m => m.username, "", new { @class = "text-danger " })
                                    </div>
                                </div>
                                @*@Html.EditorFor(model => model.emailaddress, new { htmlAttributes = new { @class = "form-control" } })*@
                                <div class="form-group">
                                    <div class="col-md-8">
                                        <button type="submit" id="btnSearch" class="btn btn-primary btn-md"> @KAF.MsgContainer._CommonHtml.searchText <i class="fa fa-search"></i></button>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <hr />
                                </div>
                            }
                            <div class="form-group">
                                <div class="col-md-8">
                                    @using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "" }, new { @id = "userEmailResetFormPartTwo", @class = "form-horizontal" }))
                                    {
                                        HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
                                        HtmlHelper.ClientValidationEnabled = true;
                                        <div id="list-panel-email">

                                        </div>}
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="~/DesignsAndScripts/PageWise/Security/UserEmailReset/UserEmailReset.js"></script>
}
