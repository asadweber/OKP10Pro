
@{
    ViewBag.Title = KAF.MsgContainer._hr_flightinfo.flightinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrFlightInfo/HrFlightInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrFlightInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrFlightInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_flightinfo.flightletterno</th>
                            <th>@KAF.MsgContainer._hr_flightinfo.flightletterdate</th>
                            <th>@KAF.MsgContainer._hr_flightinfo.flightdate</th>
                            <th>Total Person</th>
                            <th>Status</th>
                            <th style="width:220px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrFlightInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrFlightInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrFlightInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrFlightInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrFlightInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrFlightInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrFlightInfo/LandingHrFlightInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrFlightInfo/NewHrFlightInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrFlightInfo/EditHrFlightInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrFlightInfo/DetailHrFlightInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



