
@{
    ViewBag.Title = KAF.MsgContainer._hr_visademandinfo.visademandinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrVisaDemandInfo/HrVisaDemandInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md" id="btnNewHrVisaDemandInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span>  Replacement Visa Demand
                        </button>
                        <button type="submit" class="btn btn-primary btn-md" id="btnHrVisaDemandNew">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> New Visa Demand
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrVisaDemandInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_visademandinfo.demandtype</th>
                            <th>@KAF.MsgContainer._hr_visademandinfo.visademandletterno</th>
                            <th>@KAF.MsgContainer._hr_visademandinfo.visademanddate</th>
                            <th>@KAF.MsgContainer._hr_visademandinfo.visademandletterdate</th>
                            <th>Total Person</th>
                            <th>Status</th>
                            <th ></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrVisaDemandInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaDemandInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrVisaDemandInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaDemandInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrVisaDemandInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaDemandInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaDemandInfo/LandingHrVisaDemandInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaDemandInfo/NewHrVisaDemandInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaDemandInfo/EditHrVisaDemandInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaDemandInfo/DetailHrVisaDemandInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



