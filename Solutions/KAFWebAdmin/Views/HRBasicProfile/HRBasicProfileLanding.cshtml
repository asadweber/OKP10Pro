
@{
    ViewBag.Title = KAF.MsgContainer._hr_basicprofile.hr_basicprofileList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HRBasicProfile/HRBasicProfileNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHRBasicProfile">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HRBasicProfileDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_basicprofile.passportno</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HRBasicProfileNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRBasicProfileNew">
        </div>
    </div>
</div>

<div id="modal-container-HRBasicProfileEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRBasicProfileEdit">
        </div>
    </div>
</div>

<div id="modal-container-HRBasicProfileDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRBasicProfileDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRBasicProfile/LandingHRBasicProfile.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRBasicProfile/NewHRBasicProfile.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRBasicProfile/EditHRBasicProfile.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRBasicProfile/DetailHRBasicProfile.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



