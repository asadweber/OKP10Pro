@model KAF.BusinessDataObjects.gen_leavetypeEntity

<style>
        .form-horizontal .form-group {
            margin-right: 10px;
            margin-left: 10px;
        }
    </style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmGen_LeaveTypeNew", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()
    
    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            @KAF.MsgContainer._gen_leavetype.leavetypeCreate
        </div>
        
        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.leavetypeid)
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.leavetype, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.leavetype, new { htmlAttributes = new { @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.leavetype, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.remarks, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.remarks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
					 <div class="row ">
						 <div class="col-md-6">
                             <div class="form-group">
                                 @Html.CheckBox("isactive", Model.isactive ?? false, new { htmlAttributes = new { @class = " form-control isactive" } })
                                 @Html.LabelFor(model => model.isactive, htmlAttributes: new { @class = "labelNormal  " })
                                 @Html.ValidationMessageFor(model => model.isactive, "", new { @class = "text-danger" })
                             </div>
                        </div>
					</div>
                    <div class="btn-toolbar">
                        <button type="submit" id="btnSaveGenLeaveType" class="btn btn-primary btn-md btnSaveGenLeaveType"><i class="fa fa-save"> </i> @KAF.MsgContainer._Common._btnSave</button>
                        <button type="submit" id="btnModalCloseNew" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div> 
                </div>
            </div>
        </div>
    </div>
}


