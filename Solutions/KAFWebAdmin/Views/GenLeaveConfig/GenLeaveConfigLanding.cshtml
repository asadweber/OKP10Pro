
@{
    ViewBag.Title = KAF.MsgContainer._gen_leaveconfig.leaveconfigList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("GenLeaveConfig/GenLeaveConfigNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewGenLeaveConfig">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="GenLeaveConfigDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._gen_leaveconfig.leavetypeid</th>
							 <th>@KAF.MsgContainer._gen_leaveconfig.startdate</th>
							 <th>@KAF.MsgContainer._gen_leaveconfig.enddate</th>
							 <th>@KAF.MsgContainer._gen_leaveconfig.noofdays</th>
                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveConfigNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:50%!important">
        <div class="modal-content" id="mcGenLeaveConfigNew">
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveConfigEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:50%!important">
        <div class="modal-content" id="mcGenLeaveConfigEdit">
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveConfigDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:50%!important">
        <div class="modal-content" id="mcGenLeaveConfigDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveConfig/LandingGenLeaveConfig.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveConfig/NewGenLeaveConfig.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveConfig/EditGenLeaveConfig.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveConfig/DetailGenLeaveConfig.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



