    <div id="editCountryContainer">
    </div>
</div>

<div class="modal fade" id="detailsCountryModal" tabindex="-1" Country="dialog" aria-labelledby="DetailsCountryModal" aria-hidden="true" data-backdrop="static">
    <div id="detailsCountryContainer">
    </div>
</div>

<div class="modal fade" id="deleteCountryModal" tabindex="-1" Country="dialog" aria-labelledby="DeleteCountryModal" aria-hidden="true" data-backdrop="static">
    <div id="deleteCountryContainer">
    </div>
</div>

<input type="hidden" value="@PageData["baseUrl"]" id="txtBaseUrl" />

