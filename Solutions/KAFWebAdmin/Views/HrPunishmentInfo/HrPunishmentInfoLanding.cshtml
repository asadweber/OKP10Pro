
@{
    ViewBag.Title = KAF.MsgContainer._hr_punishmentinfo.hr_punishmentinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrPunishmentInfo/HrPunishmentInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrPunishmentInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrPunishmentInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_punishmentinfo.offence</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrPunishmentInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPunishmentInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrPunishmentInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPunishmentInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrPunishmentInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPunishmentInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrPunishmentInfo/LandingHrPunishmentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrPunishmentInfo/NewHrPunishmentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrPunishmentInfo/EditHrPunishmentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrPunishmentInfo/DetailHrPunishmentInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



