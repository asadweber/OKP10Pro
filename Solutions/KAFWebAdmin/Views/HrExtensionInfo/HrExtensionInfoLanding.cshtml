
@{
    ViewBag.Title = KAF.MsgContainer._hr_extensioninfo.hr_extensioninfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrExtensionInfo/HrExtensionInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrExtensionInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrExtensionInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_extensioninfo.letterno</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrExtensionInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrExtensionInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrExtensionInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrExtensionInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrExtensionInfoDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrExtensionInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrExtensionInfo/LandingHrExtensionInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrExtensionInfo/NewHrExtensionInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrExtensionInfo/EditHrExtensionInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrExtensionInfo/DetailHrExtensionInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



