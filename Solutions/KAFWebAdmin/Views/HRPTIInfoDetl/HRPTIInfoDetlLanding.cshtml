
@{
    ViewBag.Title = KAF.MsgContainer._hr_ptademanddetl.hr_ptademanddetlList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HRPTIInfoDetl/HRPTIInfoDetlNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHRPTIInfoDetl">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HRPTIInfoDetlDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_ptademanddetl.remarks</th>
                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HRPTIInfoDetlNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRPTIInfoDetlNew">
        </div>
    </div>
</div>

<div id="modal-container-HRPTIInfoDetlEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRPTIInfoDetlEdit">
        </div>
    </div>
</div>

<div id="modal-container-HRPTIInfoDetlDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHRPTIInfoDetlDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRPTIInfoDetl/LandingHRPTIInfoDetl.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRPTIInfoDetl/NewHRPTIInfoDetl.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRPTIInfoDetl/EditHRPTIInfoDetl.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HRPTIInfoDetl/DetailHRPTIInfoDetl.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



