
@{
    ViewBag.Title = KAF.MsgContainer._hr_emergencycontact.hr_emergencycontactList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrEmergencyContact/HrEmergencyContactNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrEmergencyContact">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrEmergencyContactDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._hr_emergencycontact.name1</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrEmergencyContactNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrEmergencyContactNew">
        </div>
    </div>
</div>

<div id="modal-container-HrEmergencyContactEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrEmergencyContactEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrEmergencyContactDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrEmergencyContactDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrEmergencyContact/LandingHrEmergencyContact.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrEmergencyContact/NewHrEmergencyContact.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrEmergencyContact/EditHrEmergencyContact.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/HrEmergencyContact/DetailHrEmergencyContact.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



