@model KAF.BusinessDataObjects.hr_repatriationinfoEntity

<style>
    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 10px;
    }
</style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmHr_RepatriationInfoNew", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()

    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            @KAF.MsgContainer._hr_repatriationinfo.repatriationinfoCreate
        </div>

        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.repatriationid)
                        @Html.HiddenFor(m => m.hrbasicid)
                    </div>


                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Repatriation Date", htmlAttributes: new { @class = "labelNormal   " })
                                <div class='input-group date dateonly' id='' style="width:100%; ">
                                    @Html.EditorFor(model => model.salaryreceivedtilldate, new { htmlAttributes = new { @Value = Model.salaryreceivedtilldate != null ? Convert.ToDateTime(Model.salaryreceivedtilldate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.salaryreceivedtilldate, "", new { @class = "text-danger " })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("Departure Date/ Flight Date", htmlAttributes: new { @class = "labelNormal  required " })
                                <div class='input-group date dateonly' id='' style="width:100%; ">
                                    @Html.EditorFor(model => model.flightdate, new { htmlAttributes = new { @Value = Model.flightdate != null ? Convert.ToDateTime(Model.flightdate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.flightdate, "", new { @class = "text-danger " })
                            </div>
                        </div>

                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.Label("SOD Date (As per Mov Order)", htmlAttributes: new { @class = "labelNormal  required " })
                                <div class='input-group date dateonly' id='' style="width:100%; ">
                                    @Html.EditorFor(model => model.soddate, new { htmlAttributes = new { @Value = Model.soddate != null ? Convert.ToDateTime(Model.soddate).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.soddate, "", new { @class = "text-danger " })
                            </div>
                        </div>

                    </div>

                    <div class="row ">

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(model => model.remarks, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.remarks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="btn-toolbar">
                        <button type="submit" id="btnSaveHrRepatriationInfo" class="btn btn-primary btn-md btnSaveHrRepatriationInfo"><i class="fa fa-save"> </i> @KAF.MsgContainer._Common._btnSave</button>
                        <button type="submit" id="btnModalCloseNew" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<script>
    //filecontrol addons





    $j('.dateonly').datetimepicker(
        {
            // format: 'L'
            format: 'DD-MM-YYYY'
        });
</script>




