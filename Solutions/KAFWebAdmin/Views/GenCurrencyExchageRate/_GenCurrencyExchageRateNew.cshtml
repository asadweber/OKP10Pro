@model KAF.BusinessDataObjects.gen_currencyexchagerateEntity

<style>
    .form-horizontal .form-group {
        margin-right: 10px;
        margin-left: 10px;
    }
</style>

@using (Ajax.BeginForm("", "", null, new AjaxOptions { HttpMethod = "Post", OnSuccess = "", LoadingElementId = "divProgressBar" }, new { @id = "frmCurrencyExchageRateNew", @class = "form-horizontal" }))
{
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
    HtmlHelper.ClientValidationEnabled = true;
    @Html.AntiForgeryToken()

    <div class="panel panel-primary list-panel" id="list-panel">
        <div class="panel-heading list-panel-heading">
            Create
        </div>

        <div class="panel-body">
            <div class="modal-body">
                <div class="form-horizontal container">
                    <div class="row">
                        @Html.HiddenFor(m => m.currencyexchagerateid)
                        @Html.HiddenFor(m => m.strValue1)
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.fromcurrencyname, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.fromcurrencyname, new { htmlAttributes = new { @class = " form-control", @readonly = "readonly", @Value = "KWD" } })
                                @Html.ValidationMessageFor(model => model.fromcurrencyname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.tocurrencyname, htmlAttributes: new { @class = "labelNormal required " })
                                @Html.EditorFor(model => model.tocurrencyname, new { htmlAttributes = new { @class = " form-control", @readonly = "readonly", @Value = "BDT" } })
                                @Html.ValidationMessageFor(model => model.tocurrencyname, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.rate, htmlAttributes: new { @class = "labelNormal  required" })
                                @Html.EditorFor(model => model.rate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.rate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ratedatefrom, htmlAttributes: new { @class = "labelNormal  required " })
                                <div class='input-group date fromdate' id='' style='width: 100 %; '>
                                    @Html.EditorFor(model => model.ratedatefrom, new { htmlAttributes = new { @Value = Model.ratedatefrom != null ? Convert.ToDateTime(Model.ratedatefrom).ToString("dd-MM-yyyy") : null, @class = "form-control ", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.ratedatefrom, "", new { @class = "text-danger " })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ratedateto, htmlAttributes: new { @class = "labelNormal   " })
                                <div class='input-group date todate' id='' style='width:100%; '>
                                    @Html.EditorFor(model => model.ratedateto, new { htmlAttributes = new { @Value = Model.ratedateto != null ? Convert.ToDateTime(Model.ratedateto).ToString("dd-MM-yyyy") : null, @class = "form-control", @type = "text" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                                @Html.ValidationMessageFor(m => m.ratedateto, "", new { @class = "text-danger " })
                            </div>
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.remarks, htmlAttributes: new { @class = "labelNormal  " })
                                @Html.EditorFor(model => model.remarks, new { htmlAttributes = new { @class = " form-control" } })
                                @Html.ValidationMessageFor(model => model.remarks, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="btn-toolbar">
                        <button type="submit" id="btnSaveGenCurrencyExchageRate" class="btn btn-primary btn-md btnSaveGenCurrencyExchageRate"><i class="fa fa-save"> </i> @KAF.MsgContainer._Common._btnSave</button>
                        <button type="submit" id="btnModalCloseNew" class="btn btn-danger btn-md cancel"><i class="fa fa-arrow-circle-left"> </i> @KAF.MsgContainer._Common._btnCancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


