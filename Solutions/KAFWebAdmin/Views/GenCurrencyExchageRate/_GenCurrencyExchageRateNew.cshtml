    //filecontrol addons

    function test() {

    }



    $j('.fromdate').datetimepicker(
        {
            // format: 'L'
            format: 'DD-MM-YYYY',
            minDate: GetDateFromTextBox($("#strValue1").val())
        });

    $j('.todate').datetimepicker(
        {
            // format: 'L'
            format: 'DD-MM-YYYY',
            minDate: GetDateFromTextBox($("#ratedatefrom").val())
        });
</script>




