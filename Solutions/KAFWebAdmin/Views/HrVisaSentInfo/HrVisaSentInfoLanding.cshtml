
@{
    ViewBag.Title = KAF.MsgContainer._hr_visasentinfo.visasentinfoList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrVisaSentInfo/HrVisaSentInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrVisaSentInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrVisaSentInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_visasentinfo.visasentletterno</th>
                            <th>@KAF.MsgContainer._hr_visasentinfo.visasentletterdate</th>
                            <th>@KAF.MsgContainer._hr_visasentinfo.visasentdate</th>
                            <th>Total Person</th>
                            <th>Status</th>
                            <th ></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrVisaSentInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaSentInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrVisaSentInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaSentInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrVisaSentInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrVisaSentInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaSentInfo/LandingHrVisaSentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaSentInfo/NewHrVisaSentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaSentInfo/EditHrVisaSentInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrVisaSentInfo/DetailHrVisaSentInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



