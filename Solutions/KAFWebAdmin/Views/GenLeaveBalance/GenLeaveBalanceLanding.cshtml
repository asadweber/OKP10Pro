
@{
    ViewBag.Title = KAF.MsgContainer._gen_leavebalance.leavebalanceList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("GenLeaveBalance/GenLeaveBalanceNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewGenLeaveBalance">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="GenLeaveBalanceDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
							 <th>@KAF.MsgContainer._gen_leavebalance.remarks</th>                            <th style="width:250px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveBalanceNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcGenLeaveBalanceNew">
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveBalanceEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcGenLeaveBalanceEdit">
        </div>
    </div>
</div>

<div id="modal-container-GenLeaveBalanceDetail" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcGenLeaveBalanceDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveBalance/LandingGenLeaveBalance.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveBalance/NewGenLeaveBalance.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveBalance/EditGenLeaveBalance.js"></script>
    <script src="~/DesignsAndScripts/PageWise/SetupJS/GenLeaveBalance/DetailGenLeaveBalance.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



