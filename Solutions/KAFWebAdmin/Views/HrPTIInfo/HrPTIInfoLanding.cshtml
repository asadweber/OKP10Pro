
@{
    ViewBag.Title = KAF.MsgContainer._hr_ptademand.ptademandList;
    Layout = "~/Views/Shared/_AdminLteLayout.cshtml";
    PageData["baseUrl"] = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                @{
                    KAF.CustomHelper.HelperClasses.clsSecurityPanel objSecPanel = new KAF.CustomHelper.HelperClasses.clsSecurityPanel();

                    if (objSecPanel.checkButtonPermission("HrPTIInfo/HrPTIInfoNew"))
                    {
                        <button type="submit" class="btn btn-primary btn-md"  id="btnNewHrPTIInfo">
                            <span class="glyphicon glyphicon-new-window" aria-hidden="true"></span> @KAF.MsgContainer._CommonHtml.add
                        </button>
                    }
                }
            </div>
            <div class="panel-body">
                <table id="HrPTIInfoDt" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                        <tr>
                            <th>@KAF.MsgContainer._hr_ptademand.ptiletterno</th>
                            <th>@KAF.MsgContainer._hr_ptademand.ptiletterdate</th>
                            <th>@KAF.MsgContainer._hr_ptademand.ptidate</th>
                            <th>Total Person</th>
                            <th>Status</th>
                            <th style="width:220px;"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modal-container-HrPTIInfoNew" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPTIInfoNew">
        </div>
    </div>
</div>

<div id="modal-container-HrPTIInfoEdit" class="modal fade hidden-print" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPTIInfoEdit">
        </div>
    </div>
</div>

<div id="modal-container-HrPTIInfoDetail" class="modal fade hidden-print reportmodal" role="dialog">
    <div class="modal-dialog" style="width:90%!important">
        <div class="modal-content" id="mcHrPTIInfoDetail">
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/ckeditor/ckeditor.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPTIInfo/LandingHrPTIInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPTIInfo/NewHrPTIInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPTIInfo/EditHrPTIInfo.js"></script>
    <script src="~/DesignsAndScripts/PageWise/HRJS/HrPTIInfo/DetailHrPTIInfo.js"></script>
    <script>
        var addlink = '@ViewBag.addlink';
    </script>
}



